<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Banners" table="banners">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="bannersGroup" type="smallint" column="banners_group" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="bannerType" type="smallint" column="banner_type" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="fromDate" type="datetime" column="from_date" nullable="false"/>
    <field name="duration" type="smallint" column="duration" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="comments" type="string" column="comments" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="active" type="boolean" column="active" nullable="false"/>
    <field name="views" type="integer" column="views" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="clicks" type="integer" column="clicks" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="sourceFile" type="string" column="source_file" length="100" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="htmlText" type="string" column="html_text" length="5000" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="link" type="string" column="link" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="picWidth" type="integer" column="pic_width" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="picHeight" type="integer" column="pic_height" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
