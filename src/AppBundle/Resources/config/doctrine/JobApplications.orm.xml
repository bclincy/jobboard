<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\JobApplications" table="job_applications">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="seekerId" type="integer" column="seeker_id" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="jobId" type="integer" column="job_id" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="name" type="string" column="name" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="email" type="string" column="email" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="resumeId" type="integer" column="resume_id" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="coverLetter" type="string" column="cover_letter" length="5000" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="datePosted" type="datetime" column="date_posted" nullable="true"/>
  </entity>
</doctrine-mapping>
