<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Jobs" table="jobs">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="string" column="description" length="500" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="jobCategory" type="smallint" column="job_category" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="employeeType" type="smallint" column="employee_type" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="positionType" type="smallint" column="position_type" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="experienceLevel" type="integer" column="experience_level" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="schoolLevel" type="integer" column="school_level" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="salary" type="decimal" column="salary" precision="10" scale="0" nullable="false"/>
    <field name="country" type="integer" column="country" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="state" type="integer" column="state" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="city" type="integer" column="city" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="companyId" type="integer" column="company_id" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="contactEmail" type="string" column="contact_email" length="100" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="expiresAfter" type="integer" column="expires_after" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="active" type="boolean" column="active" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="views" type="integer" column="views" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="featured" type="boolean" column="featured" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="newRecord" type="boolean" column="new_record" nullable="false">
      <options>
        <option name="default">1</option>
      </options>
    </field>
    <field name="dateCreated" type="datetime" column="date_created" nullable="true"/>
    <field name="dateUpdated" type="datetime" column="date_updated" nullable="true"/>
    <field name="datePosted" type="datetime" column="date_posted" nullable="true"/>
    <field name="dateExpired" type="datetime" column="date_expired" nullable="true"/>
  </entity>
</doctrine-mapping>
