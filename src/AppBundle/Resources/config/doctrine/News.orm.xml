<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\News" table="news">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="500" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="text" type="string" column="text" length="5000" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="link" type="string" column="link" length="500" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="rang" type="integer" column="rang" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="showRec" type="smallint" column="show_rec" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">1</option>
      </options>
    </field>
    <field name="datePosted" type="datetime" column="date_posted" nullable="true"/>
    <field name="dateUpdated" type="datetime" column="date_updated" nullable="true"/>
  </entity>
</doctrine-mapping>
