<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\PostingsInterval" table="postings_interval">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="min" type="integer" column="min" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="max" type="integer" column="max" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="label" type="string" column="label" length="30" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
